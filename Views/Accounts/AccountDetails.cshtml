@using FruityNET.DTOs
@model AccountDetailsDTO


@{
    ViewData["Title"] = "Account Details";
}


   
        <h1>Account Details</h1>



        <form asp-action="AccountDetails" method="GET" role="form">


                  <div class="form-group col-md-4">
                    <label asp-for="FirstName">First Name
                    </label>
                    <input asp-for="FirstName" class="form-control" readonly/>
                </div>


                <div class="form-group col-md-4">
                    <label asp-for="LastName">Last Name
                    </label>
                    <input asp-for="LastName" class="form-control" readonly/>
                </div>


                

                <div class="form-group col-md-4">
                    <label asp-for="Username">Username
                    </label>
                    <input asp-for="Username" class="form-control"readonly/>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="EmailAddress">
                    </label>
                    <input asp-for="EmailAddress" class="form-control"readonly/>
                </div>

            
        </form>