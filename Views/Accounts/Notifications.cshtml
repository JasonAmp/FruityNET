@using FruityNET.DTOs



@model NotificationsViewDTO

@{
    ViewData["Title"] = "Notifications";
}

<h3 style="text-align: center;">Notifications</h3><br><br><br>


@foreach (var Notification in Model.AllNotifications)
{
     <div class="card">
  <div class="card-body">
    <h4 class="card-title">
    
    <p class="card-text">@Notification.Message      <a class="btn btn-danger btn-sm"
                        asp-asp-controller="Accounts"

                        asp-action="DeleteNotification"
                        asp-route-id="@Notification.Id">
                        
                        <i class="fa fa-remove" ></i>




                </a></p>
    
    
    
  </div></div><br>

}