@using FruityNET.DTOs



@model PostViewDetaisDTO

@{
    ViewData["Title"] = " View Post";
}

<div class="card">
  <div class="card-body">
    <h4 class="card-title">@Model.Username</h4>
    <p class="card-text">@Model.content</p>
        <h6 class="card-subtitle mb-2 text-muted">@Model.DatePosted</h6>

    </div></div><br>

<h3>Comments</h3>
@foreach (var comment in Model.comments)
{
    <div class="card">
  <div class="card-body">
    <h4 class="card-title">@comment.Username</h4>
    <h6 class="card-subtitle mb-2 text-muted">@comment.DatePosted</h6>
    <p class="card-text">@comment.Content</p>
    
  </div></div><br>
}
