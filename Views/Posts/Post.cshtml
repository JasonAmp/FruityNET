@using Microsoft.AspNetCore.Identity
@using FruityNET.DTOs



@model AddPostDTO

@{
    ViewData["Title"] = "Post Status";
}


 <a class="btn btn-default btn-sm"
                        asp-action="AllPosts">
                        Back
                </a><br><br>

<form asp-action="Post" method="post" role="form">
<p style="color: red;">@ViewBag.Message</p>


                <div class="form-group">
                    
                    <label asp-for="Content">Content
                    </label>
                    <textarea  asp-for="Content" placeholder="Tell your friends what is on your mind." class="form-control"/></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                
                
                
            <button type="submit" class="btn btn-primary">Post</button><br>
        </form>
