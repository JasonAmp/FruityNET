@using FruityNET.DTOs



@model EditPostDTO

@{
    ViewData["Title"] = "Edit Status";
}

 <a class="btn btn-default btn-sm"
                        asp-action="AllPosts">
                        Back
                </a><br><br>

<form  method="post" role="form">
<p style="color: red;">@ViewBag.Message</p>


                <div class="form-group">
                    
                    <label asp-for="Content">Content
                    </label>
                    <textarea  asp-for="Content" placeholder="Change Post..." class="form-control"/></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                
                
                
            <button type="submit" class="btn btn-primary">Post</button><br>
        </form>
