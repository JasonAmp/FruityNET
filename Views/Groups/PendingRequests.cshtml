@using FruityNET.DTOs



@model GroupRequestsViewModel

@{
    ViewData["Title"] = "Pending Requests";
}

<h2 style="text-align: center;">Group Requests</h2><br><br>
    <div class="jumbotron">



<h6 style="text-align: center;">Incoming Requests</h6>
@if(Model.requests.Count is 0)
{<p style="text-align: center;">No Incoming Requests</p>}
@foreach (var request in Model.requests)
{
    <div class="card">
  <div class="card-body" style="text-align: center;">
    <h4 class="card-title">
      @if(@request.Pending is true){<p style="text-align: center;">Pending</p>}</h4>
    <p class="card-text" style="text-align: center;">@request.Username</p>
    <a class="btn btn-success btn-sm"
                        asp-action="AcceptRequest"
                        asp-controller="Groups"
                        asp-route-id="@request.Id">
                        Accept
                </a>
    <a class="btn btn-danger btn-sm"
                        asp-action="DeclineRequest"
                        asp-controller="Groups"
                        asp-route-id="@request.Id">
                        Decline
                </a>
    
  </div></div><br>
}
<br>
<br><br><br>

</div>
